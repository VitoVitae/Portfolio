<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controleur.CtrlListeCategories">
   <center>
      <TableView fx:id="tvListeCategorie" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="tabColNom" prefWidth="118.4000244140625" text="Nom" />
          <TableColumn fx:id="tabColDescription" prefWidth="304.79998779296875" text="Description" />
            <TableColumn fx:id="tabColTaux" prefWidth="75.20001220703125" text="Taux" />
        </columns>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="BOTTOM_RIGHT" spacing="15.0">
         <children>
            <Button fx:id="btnAjoutCategorie" mnemonicParsing="false" onAction="#ajouterCategorie" prefWidth="90.0" text="Ajouter" />
            <Button fx:id="btnModifieCategorie" mnemonicParsing="false" onAction="#modifierCategorie" prefHeight="20.0" prefWidth="90.0" text="Modifier" />
            <Button fx:id="btnSupprimerCategorie" mnemonicParsing="false" onAction="#supprimerCategorie" prefHeight="20.0" prefWidth="90.0" text="Supprimer" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
